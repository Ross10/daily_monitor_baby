<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home__page_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgwhite"
    android:weightSum="1"
    android:orientation="vertical"

    tools:context="com.example.ross.monitorbaby.Home_Page_Activity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        app:srcCompat="@drawable/babyforhomepage"
        android:id="@+id/imageView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logohome"
        android:id="@+id/imageView3" />

    <LinearLayout
        android:layout_margin="10sp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:weightSum="2">

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:drawableLeft="@drawable/dolist"
            android:text="רשימת קניות"
            android:id="@+id/doList_Btn"
            android:layout_weight="1.00" />

        <Button
            android:layout_width="0sp"
            android:background="#0000"
            android:layout_height="wrap_content"
            android:id="@+id/gallary_Btn"
            android:drawableLeft="@drawable/gallary"
            android:text="גלריית תמונות"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout

        android:layout_margin="10sp"
        android:orientation="horizontal"
        android:weightSum="2"

        android:layout_width="fill_parent"
        android:layout_height="70sp">

        <Button
            android:layout_width="0sp"
            android:drawableLeft="@drawable/chat"
            android:background="#0000"
            android:layout_height="wrap_content"
            android:text="צ'ט"
            android:id="@+id/chat_Btn"
            android:layout_weight="1" />

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/calander"
            android:background="#0000"
            android:text="יומן"
            android:id="@+id/calanter_Btn"
            android:layout_weight="1" />


    </LinearLayout>



    <LinearLayout
        android:layout_margin="10sp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:weightSum="2">

        <Button
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="GPS"
            android:id="@+id/gps_Btn"
            android:drawableLeft="@drawable/gps"
            android:layout_weight="1" />

        <Button
            android:layout_width="0sp"
            android:background="#0000"
            android:text="מעקב"
            android:layout_height="wrap_content"
            android:id="@+id/tracking_Btn"
            android:drawableLeft="@drawable/tracking"
            android:layout_weight="1" />


    </LinearLayout>




</LinearLayout>

