<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_to__do_list_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgnati"
    tools:context="com.example.ross.monitorbaby.To_Do_list_Activity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout2">


    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:id="@+id/editImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onEdit"
        />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cart"
        android:id="@+id/imageView5"
        android:layout_marginBottom="15sp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_above="@+id/toDoListEditText"
        android:layout_toLeftOf="@+id/deleteImg"
        android:layout_toStartOf="@+id/deleteImg" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:id="@+id/deleteImg"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:onClick="onDelete"
        android:layout_below="@+id/editImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/toDoListEditText"
        android:hint="@string/addTask1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignTop="@+id/taskAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/taskAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addToList"
        android:onClick="addTaskNow"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/deleteImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
