<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tracking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ross.monitorbaby.TrackingActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">





    </LinearLayout>

    <!--down arrow-->

    <!--up arrow-->

    <!--ammout text view-->

    <!--ammount bottle-->

    <!--bottle-->

    <!--diaper-->


    <ImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:id="@+id/iv_downArrow"
        android:onClick="onDownArrowClicked"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_ammountBottle"
        android:layout_toEndOf="@+id/iv_ammountBottle"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/iv_upArrow"
        android:onClick="onUpArrowClicked"
        android:layout_alignTop="@+id/iv_ammountBottle"
        android:layout_toRightOf="@+id/iv_ammountBottle"
        android:layout_toEndOf="@+id/iv_ammountBottle"
        android:layout_marginTop="17dp"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="95sp"
        android:layout_height="95sp"
        android:id="@+id/iv_diaper"
        android:background="@drawable/diaper"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp"
        android:layout_alignTop="@+id/iv_bottle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onDiaperClick"

        />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/pee_emoji"
        android:id="@+id/pee_iv_id"
        android:background="@drawable/pee_emoji"
        android:layout_alignTop="@+id/shit_iv_id"
        android:layout_toLeftOf="@+id/shit_iv_id"
        android:layout_toStartOf="@+id/shit_iv_id"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:onClick="onPeeClick"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:id="@+id/iv_ammountBottle"
        android:background="@drawable/b150"
        android:layout_below="@+id/iv_diaper"
        android:visibility="gone"
        />

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/green_vi"
        android:id="@+id/iv_confirm_bottle"
        android:onClick="onConfirmBottleClick"
        android:visibility="gone"
        android:layout_below="@+id/iv_upArrow"
        android:layout_alignRight="@+id/iv_diaper"
        android:layout_alignEnd="@+id/iv_diaper"
        android:layout_marginTop="12dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logs_lv_id"
        android:layout_marginTop="156dp"
        android:layout_below="@+id/iv_diaper"
        />

    <ImageView
        android:layout_width="85sp"
        android:layout_height="85sp"
        android:id="@+id/iv_bottle"
        android:background="@drawable/bottle2"
        android:layout_marginTop="19dp"
        android:onClick="onBottleClick"
        android:layout_toLeftOf="@+id/iv_diaper"
        android:layout_toStartOf="@+id/iv_diaper"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />

    <TextView
        android:text="@string/textview2"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ammout"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_above="@+id/iv_downArrow"
        android:layout_toLeftOf="@+id/iv_diaper"
        android:layout_toStartOf="@+id/iv_diaper"
        android:layout_marginBottom="29dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/shit_emoji"
        android:background="@drawable/shit_emoji"
        android:id="@+id/shit_iv_id"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_below="@+id/iv_diaper"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:onClick="onShitClick"
        android:visibility="gone"/>


</RelativeLayout>